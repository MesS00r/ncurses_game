{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Valgrind Check (Kitty)",
            "type": "shell",
            "command": "kitty",
            "args": [
                "--directory", "${workspaceFolder}/build",
                "--",
                "valgrind", 
                "-q",
                "--smc-check=all-non-file",
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--log-file=${workspaceFolder}/valgrind.log", 
                "./ncurses_game",

            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "CMake: build" 
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}
