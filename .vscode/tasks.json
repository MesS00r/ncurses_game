{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Valgrind Check",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--log-file=${workspaceFolder}/valgrind.log", 
                "./ncurses_game" 
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "CMake: build" 
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}

